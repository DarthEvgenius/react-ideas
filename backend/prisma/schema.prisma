generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Idea {
  id          String   @id @default(uuid())
  nick        String   @unique
  name        String
  description String
  text        String
  createdAt   DateTime @default(now())
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  nick      String   @unique
  password  String
  createdAt DateTime @default(now())
  ideas     Idea[]
}
